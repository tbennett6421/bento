{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "vm_name": "{{ user `template` }}",

      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",

      "http_directory": "{{user `http_directory`}}",
      "output_directory": "{{ user `build_directory` }}/packer-{{user `template`}}-virtualbox", 

      "cpus": "{{ user `cpus` }}",
      "memory": "{{ user `memory` }}",
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",

      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US.UTF-8<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US.UTF-8<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=vagrant<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `preseed_path`}}<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",

      "guest_additions_url": "{{ user `guest_additions_url` }}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version"
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "ubuntu-64",
      "vm_name": "{{ user `template` }}",

      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",

      "output_directory": "{{ user `build_directory` }}/packer-{{user `template`}}-vmware",

      "cpus": "{{ user `cpus` }}",
      "memory": "{{ user `memory` }}",
      "disk_size": "{{user `disk_size`}}",
      "vmx_data": {
        "cpuid.coresPerSocket": "{{ user `cpus` }}",
        "ethernet0.pciSlotNumber": "32"
      },
      "vmx_remove_ethernet_interfaces": true,
      "headless": "{{ user `headless` }}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",

      "floppy_files": [
        "{{user `http_directory`}}/preseed.cfg"
      ],

      "boot_command": [
        "<enter><wait><f6><wait><esc><wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz",
        " initrd=/install/initrd.gz",
        " priority=critical",
        " locale=en_US",
        " file=/media/preseed.cfg",
        "<enter>"
      ],
      "boot_wait": "15s",
      "tools_upload_flavor": "linux"
    },
    {	
      "type": "vsphere-iso",
      "guest_os_type": "ubuntu64Guest",

      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "iso_paths": [
        "[{{user `vcenter_datastore`}}] ISO/OS/Linux/{{user `iso_name`}}"
      ],
      
      "CPUs":             	 "{{ user `cpus` }}",
      "RAM":              	 "{{ user `memory` }}",
      "RAM_reserve_all": true,
	  
	  "storage": [{
	    "disk_size": 		 "{{user `disk_size`}}",
		"disk_thin_provisioned": true
	  }],
      "disk_controller_type":  "pvscsi",
      "network_adapters": [{
		"network": "VM Network",
		"network_card": "vmxnet3"
	  }],

      "vcenter_server":      "{{user `vcenter_server`}}",
      "username":            "{{user `vcenter_username`}}",
      "password":            "{{user `vcenter_password`}}",
      "insecure_connection": "{{user `vcenter_insecure`}}",

      "vm_name": 			 "{{ user `template` }}",
	  "folder":				 "{{user `vcenter_folder`}}",
	  "cluster":			 "{{user `vcenter_cluster`}}",
      "host":     			 "{{user `vcenter_esxi_host`}}",
      "datastore": 			 "{{user `vcenter_datastore`}}",

     "export": {
		"force": true,
		"output_directory": 	 "{{ user `build_directory` }}/packer-{{user `template`}}-vsphere"
	  },
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
	  
      "floppy_files": [
        "{{user `http_directory`}}/preseed.cfg"
      ],

      "boot_command": [
        "<enter><wait><f6><wait><esc><wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz",
        " initrd=/install/initrd.gz",
        " priority=critical",
        " locale=en_US",
        " file=/media/preseed.cfg",
        "<enter>"
      ]
    }		
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "{{template_dir}}/scripts/update.sh",
        "{{template_dir}}/../_common/sshd.sh",
        "{{template_dir}}/scripts/networking.sh",
        "{{template_dir}}/scripts/sudoers.sh",
        "{{template_dir}}/scripts/vagrant.sh",
        "{{template_dir}}/../_common/virtualbox.sh",
        "{{template_dir}}/scripts/vmware.sh",
        "{{template_dir}}/scripts/cleanup.sh",
        "{{template_dir}}/../_common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{ user `build_directory` }}/{{user `box_basename`}}.{{.Provider}}.box",
	  "keep_input_artifact": true,
      "except": ["vsphere-iso"]
    },
	{
	  "checksum_types": ["md5", "sha1", "sha256"],
      "type": "checksum",
      "output": "{{ user `build_directory` }}/{{user `box_basename`}}_{{.BuilderType}}_{{.ChecksumType}}.checksum"
	},	
	{
	  "type": "compress",
      "keep_input_artifact": true,
      "output": "{{ user `build_directory` }}/{{user `box_basename`}}_{{.BuilderType}}.tar.gz"
	  
	}
 ],
  "variables": {
    "box_basename": "ubuntu-16.04",
    "build_directory": "../../builds",
    "http_directory": "{{template_dir}}/http",
    "build_timestamp": "{{isotime \"20060102150405\"}}",

    "cpus": "2",
    "memory": "2048",
    "disk_size": "10000",
    "headless": "false",

    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",
    "git_revision": "__unknown_git_revision__",
    "guest_additions_url": "",

    "iso_checksum": "a06cd926f5855d4f21fb4bc9978a35312f815fbda0d0ef7fdc846861f4fc4600",
    "iso_checksum_type": "sha256",	
    "iso_name": "ubuntu-16.04.3-server-amd64.iso",
    "mirror": "http://releases.ubuntu.com",
    "mirror_directory": "16.04.3",
    "name": "ubuntu-16.04",
    "preseed_path": "preseed.cfg",
    "template": "ubuntu-16.04-amd64",
    "version": "TIMESTAMP",
	
	"vcenter_server":		"<SYMBOL>",
    "vcenter_username":     "<SYMBOL>",
    "vcenter_password":     "<SYMBOL>",
	"vcenter_insecure":		"true",
	"vcenter_folder":		"<SYMBOL>",
	"vcenter_cluster":		"<SYMBOL>",
	"vcenter_esxi_host":	"<SYMBOL>",
	"vcenter_datastore":	"<SYMBOL>"
	
  }
}
